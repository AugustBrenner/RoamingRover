<body class="signup-background">

<nav class="navbar navbar-default no-rad">
	<div class="navbar-header">
    	<button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-main">
        	<span class="sr-only">Toggle Navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="#">RoamingRover</a>
    </div>
    
    <div class="collapse navbar-collapse" id="navbar-main">
    	<ul class="nav navbar-nav navbar-right">
        	<li class="dropdown">
            	<a href="#" class="dropdown-toggle" data-toggle="dropdown">My Account <i class="fa fa-caret-down"></i></a>
                <ul class="dropdown-menu">
                	<li><a href="/login">Login</a></li>
                </ul>
            </li>
        </ul>
    </div>
</nav>

<div class="container">
	<div class="signup-container">
        <%= form_tag do %>
        <div class="signup-header">
            Complete Your Account
        </div>
        <div class="margin-top-10 txt-center">
        	<img src="/assets/avatar.png" class="img-circle" width="100px" />
        </div>
        <div class="signup-field-headers">
        	Your Address
        </div>
        <div class="margin-top-10">
        	<input name="address" class="form-control" type="text" placeholder="Address" />
        </div>
        <div class="signup-field-headers">
        	Phone Number
        </div>
        <div class="margin-top-10">
        	<input name="phone_number" class="form-control" type="tel" placeholder="Phone Number" />
        </div>
        <div class="signup-field-headers">
        	Breeds Handled
        </div>
        <div class="margin-top-10">
        	<input name="breeds" class="form-control" type="text" placeholder="Breeds Handled" />
        </div>
        <div class="row">
        	<div class="col-sm-6">
            	<div class="signup-field-headers">
                    Years of Experience
                </div>
                <div class="margin-top-10">
                    <input name="years_exp" class="form-control" type="text" placeholder="Years of Experience" />
                </div>
            </div>
            <div class="col-sm-6">
            	<div class="signup-field-headers">
                    Your Rate
                </div>
                <div class="margin-top-10">
                    <input name="rate" class="form-control" type="text" placeholder="Rate" />
                </div>
            </div>
        </div>
        <div class="signup-field-headers">
        	Your Availability
        </div>
        <div class="margin-top-10">
        	<input name="avail" class="form-control" type="text" placeholder="General Availability" />
        </div>
        <div class="margin-top-20 txt-center">
        	<button type="submit" class="btn btn-primary">Sign Up</button>
        </div>
        <% end %>
    </div>
</div>

<%= javascript_include_tag "application", "data-turbolinks-track" => true %>

</body>
